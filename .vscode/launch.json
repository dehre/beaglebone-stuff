{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch debug",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "stopAtEntry": true,
            "program": "${command:cmake.launchTargetPath}",
            "args": ["arg1", "arg2"],
            "environment": [{ "name": "config", "value": "Debug" }],
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
